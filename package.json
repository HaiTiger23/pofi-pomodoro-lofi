{
  "name": "pofi",
  "version": "1.2.2",
  "description": "Pofi - A music player",
  "author": "Hai Dev",
  "license": "MIT",
  "private": true,
  "main": "elect.js",
  "scripts": {
  "serve": "vue-cli-service serve",
  "build:vue": "vue-cli-service build",
  "start": "npm run build:vue && electron .",
  "watch": "nodemon --watch elect.js --exec electron .",
  "dev": "concurrently \"npm run serve\" \"npm run electron:dev\"",
  "electron:dev": "wait-on http://localhost:8080 && electron .",
  "generate-icons": "electron-icon-builder --input=./pofi_logo.png --output=./icons",
  "package": "npm run generate-icons && electron-packager ./ --platform=darwin --arch=x64 --out=package --overwrite=force --icon=./icons/icons/mac/icon.icns",
  "package-win": "npm run generate-icons && electron-packager ./ --platform=win32 --arch=x64 --out=package --overwrite=force",
  "build:electron": "vue-cli-service build && electron-builder"
}
,
  "dependencies": {
    "axios": "^1.4.0",
    "core-js": "^3.8.3",
    "express": "^4.21.2",
    "flowbite": "^1.6.5",
    "howler": "^2.2.3",
    "nodemon": "^2.0.22",
    "primeicons": "^7.0.0",
    "remixicon": "^3.3.0",
    "sound-play": "^1.1.0",
    "vue": "^3.2.13",
    "vuex": "^4.1.0",
    "youtube-player": "^5.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "autoprefixer": "^10.4.14",
    "electron": "^25.1.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^17.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "build": {
  "appId": "com.pofi-hai-dev.id",
  "productName": "Pofi",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "elect.js",
    "preload.js",
    "dist/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis",
    "icon": "icons/icons/win/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "icons/icons/mac/icon.icns"
  }
  }
}
